@using MudBlazor

<MudDialog>
    <DialogContent>
        <MudText Typo="Typo.h6">✅ Submission Successful</MudText>
        <MudText>@Message</MudText>
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Primary" OnClick="OnOkClicked">OK</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [Parameter] public EventCallback OnClose { get; set; }
    [Parameter] public string Message { get; set; }

    private async Task OnOkClicked()
    {
        await OnClose.InvokeAsync();
    }
}
